@model IEnumerable<DAL.Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           <th>Id</th>       
           <th>Name</th>    
           <th>Unit Price</th>    
           <th>Description</th>      
           <th>Actions</th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>@item.ProductId</td>        
             <td>@item.Name</td>          
             <td>@item.UnitPrice</td>        
             <td>@item.Description</td> 
            <td>
                    <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-primary">Edit</a>    
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId" onclick="return confirm('Are you sure to delete?')" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
